<div class="row">
    <div class="span5">
        <h2>Open Jobs</h2>

        <table class="table table-striped table-hover alpha">
          <thead>
            <tr>
              <th>Item</th>
              <th>Tip</th>
              <th>Deliver By</th>
            </tr>
          </thead>

          <tbody id="sortable1" class="connectedSortable">
            <% @requests.each do |request| %>
                <%= render :partial => 'shared/per_job', :locals => {:request => request, :show_input => true} %>
            <% end %>
            <tr class="emptyMessage"><td colspan="3">No more available requests!</td></tr>

          </tbody>
        </table>

    </div>


    <div class="span5 well well-large jobs">
        <h2>My Jobs</h2>

        <!-- <form class="well well-large jobs" action="<%=new_job_path%>" method="POST"> -->
        <%= form_for @job do |f| %>
            <table class="table table-striped table-hover alpha">
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Tip</th>
                  <th>Deliver By</th>
                </tr>
              </thead>
              <tbody id="sortable2" class="connectedSortable">

                <% @jobs.each do |job| %>
                    <%= render :partial => 'shared/per_job', :locals => {:request => job, :show_input => false} %>
                <% end %>

                <tr class="emptyMessage"><td colspan="3">Drag and drop jobs here to add</td></tr>
              </tbody>
            </table>

            <input type="submit" class="btn btn-primary btn-large" value="Accept Jobs">

        <% end %>
    </div>
</div>

